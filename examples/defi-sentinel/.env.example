# DeFi Sentinel Environment Configuration
# Copy to .env and fill in your API keys

# =============================================================================
# Optional: Blockchain APIs (for real mempool monitoring)
# =============================================================================

# Ethereum RPC endpoint (Infura, Alchemy, or your own node)
# ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Flashbots RPC (for MEV detection)
# FLASHBOTS_RPC_URL=https://relay.flashbots.net

# =============================================================================
# Optional: LLM APIs (for CMVK verification)
# =============================================================================

# OpenAI API Key
OPENAI_API_KEY=sk-your-key-here

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-key-here

# =============================================================================
# Demo Configuration
# =============================================================================

# Attack types: all, reentrancy, flash_loan, oracle, sandwich
ATTACK_TYPE=all

# Enable UI dashboard on port 8081
ENABLE_UI=true

# Simulated transactions per second (for demo)
TPS_SIMULATION=100

# =============================================================================
# Observability
# =============================================================================

GF_SECURITY_ADMIN_PASSWORD=admin
