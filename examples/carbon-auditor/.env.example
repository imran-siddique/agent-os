# Carbon Auditor Environment Configuration
# Copy to .env and fill in your API keys

# =============================================================================
# Required: LLM API Keys (at least one)
# =============================================================================

# OpenAI API Key (for GPT-4 in CMVK verification)
OPENAI_API_KEY=sk-your-key-here

# Anthropic API Key (for Claude in CMVK verification)  
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Google API Key (for Gemini in CMVK verification)
# GOOGLE_API_KEY=your-key-here

# =============================================================================
# Optional: Satellite Data APIs
# =============================================================================

# Copernicus Data Space (free registration at https://dataspace.copernicus.eu/)
# Used for real Sentinel-2 satellite imagery
# COPERNICUS_CLIENT_ID=your-client-id
# COPERNICUS_CLIENT_SECRET=your-client-secret

# =============================================================================
# Demo Configuration
# =============================================================================

# Demo mode: fraud, verified, or both
DEMO_MODE=both

# Number of projects to audit (1-50)
AUDIT_COUNT=10

# Enable UI dashboard on port 8080
ENABLE_UI=true

# =============================================================================
# Observability
# =============================================================================

# Grafana admin password (default: admin)
GF_SECURITY_ADMIN_PASSWORD=admin

# Enable detailed tracing (slower but more insights)
ENABLE_DETAILED_TRACING=false
