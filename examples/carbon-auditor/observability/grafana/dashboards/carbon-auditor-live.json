{
  "dashboard": {
    "id": null,
    "uid": "carbon-auditor-live",
    "title": "Carbon Auditor - Live Dashboard",
    "tags": ["carbon", "agent-os", "demo"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "Agents Active",
        "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "carbon_auditor_agents_active",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "green", "value": 3}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Projects Audited",
        "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0},
        "targets": [
          {
            "expr": "carbon_auditor_projects_total",
            "refId": "A"
          }
        ]
      },
      {
        "id": 3,
        "type": "stat",
        "title": "Fraud Detected",
        "gridPos": {"h": 4, "w": 4, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "carbon_auditor_fraud_detected_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "gauge",
        "title": "Fraud Rate",
        "gridPos": {"h": 4, "w": 4, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "carbon_auditor_fraud_detected_total / carbon_auditor_projects_total * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 20}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "gauge",
        "title": "CMVK Consensus",
        "gridPos": {"h": 4, "w": 4, "x": 16, "y": 0},
        "targets": [
          {
            "expr": "carbon_auditor_cmvk_consensus_ratio * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "type": "stat",
        "title": "Policy Violations",
        "gridPos": {"h": 4, "w": 4, "x": 20, "y": 0},
        "targets": [
          {
            "expr": "agent_os_violations_total",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "type": "timeseries",
        "title": "Audit Activity",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(carbon_auditor_projects_total[1m])",
            "legendFormat": "Audits/min",
            "refId": "A"
          },
          {
            "expr": "rate(carbon_auditor_fraud_detected_total[1m])",
            "legendFormat": "Fraud/min",
            "refId": "B"
          }
        ]
      },
      {
        "id": 8,
        "type": "timeseries",
        "title": "Audit Duration",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(carbon_auditor_audit_duration_seconds_bucket[5m]))",
            "legendFormat": "p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(carbon_auditor_audit_duration_seconds_bucket[5m]))",
            "legendFormat": "p50",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {"unit": "s"}
        }
      },
      {
        "id": 9,
        "type": "table",
        "title": "Recent Audits",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "carbon_auditor_last_audit_info",
            "format": "table",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "type": "piechart",
        "title": "Audit Results",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "carbon_auditor_results_total",
            "legendFormat": "{{result}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 11,
        "type": "bargauge",
        "title": "Agent Performance",
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 12},
        "targets": [
          {
            "expr": "carbon_auditor_agent_tasks_total",
            "legendFormat": "{{agent}}",
            "refId": "A"
          }
        ]
      }
    ]
  },
  "folderId": 0,
  "overwrite": true
}
